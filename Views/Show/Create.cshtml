@model Trabajo_VentaEntradas.Models.Show

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.Items;
    List<SelectListItem> itemsBanda = (List<SelectListItem>)ViewBag.ItemsBanda;
}

<h1>Create</h1>

<h4>Show</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fecha" class="control-label"></label>
                <input asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="banda" class="control-label"></label>
                @Html.DropDownList("banda", itemsBanda, null, new { @class = "form-control" })
                <span asp-validation-for="banda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precioCampo" class="control-label"></label>
                <input asp-for="precioCampo" class="form-control" />
                <span asp-validation-for="precioCampo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precioPlatea" class="control-label"></label>
                <input asp-for="precioPlatea" class="form-control" />
                <span asp-validation-for="precioPlatea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="asientosPlatea" class="control-label"></label>
                <input asp-for="asientosPlatea" class="form-control" />
                <span asp-validation-for="asientosPlatea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="asientosCampo" class="control-label"></label>
                <input asp-for="asientosCampo" class="form-control" />
                <span asp-validation-for="asientosCampo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idLocalidad" class="control-label"></label>
                @Html.DropDownList("idLocalidad", items, null, new { @class = "form-control" })
                <span asp-validation-for="idLocalidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
