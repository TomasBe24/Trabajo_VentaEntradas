                                var precio = @Model.precioPlatea * cant;
                                @*alert("entro a platea, cant vale" + cant + "y precio vale " + precio + "y el precio campo vale " + @Model.precioCampo);*@
                            }

                            document.getElementById("Precio").innerHTML = " $" + precio;

