@model IEnumerable<Trabajo_VentaEntradas.Models.Banda>

@{
    ViewData["Title"] = "Home";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/banda.css" />
</head>

<h1>Bandas</h1>
<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">@item.nombre</h1>
                    <a asp-area="" asp-controller="Show" asp-action="Comprar" asp-route-id="@item.id"><img id="Imagen_Banda" src="@("~/imagenes/bandas/" + item.foto)" asp-append-version="true"/></a>
                </div>
            </div>
        </div>
    }
</div>

